{% extends 'base.html.twig' %}

{% block body %}
<h2>Players</h2>
<p>
    <a href="{{url('admin.player.form.add')}}" class="btn btn-info">Add</a>
</p>
{# affichage des messages flash #}
{% for notice in app.flashes('notice') %}
    <div class="alert alert-success" role="alert">{{notice}}</div>
{% endfor %}
<table class="table table-stripped">
<tr>
<th>Portrait</th>
<th>Name</th>
<th></th>
{% for player in entities %}
    <tr>
        <td><img src="{{asset('img/portrait/' ~ player.portrait)}}" class="img-fluid flag" /></td>
        <td>
        {{(player.firstname ~' '~player.lastname) | title}}
        </td>
        <td>
            <a href="{{url('admin.player.form.edit', {id: player.id})}}" class="btn btn-warning">Edit</a>
            <a href="{{url('admin.player.remove', {id: player.id})}}" class="btn btn-danger">Remove</a>
        </td>
    </tr>
{% endfor %}
</tr>
</table>
{% endblock %}

{% block javascripts %}
<script src="{{asset('js/admin.js')}}" defer></script>
{% endblock %}